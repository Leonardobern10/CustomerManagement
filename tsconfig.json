{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*"],
            "@controllers/*": ["controllers/*"],
            "@entities/*": ["entities/*"],
            "@services/*": ["services/*"],
            "@exceptions/*": ["exceptions/*"],
            "@config/*": ["config/*"]
        },
        "moduleResolution": "node", // Resolve módulos como o Node.js,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"] // Exclui pastas desnecessárias
}
